pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Get the code from the version control system.
                checkout scm
            }
        }

        stage('Flake8 Lint') {
            steps {
                // Run flake8 against your codebase
                sh 'python3 --version'
                sh 'python3 -m flake8 --version'
                sh 'python3 -m flake8 . --count --show-source --statistics || true'
            }
        }
        stage('Publish result') {
            steps {
                sh 'docker build -t jenkinsformation/my-python-project-db:$BUILD_NUMBER .'
				sh 'docker login -u $DOCKER_LOGIN -p $DOCKER_PASS'
				sh 'docker push jenkinsformation/my-python-project-db:$BUILD_NUMBER'
            }
        }
    }
}
